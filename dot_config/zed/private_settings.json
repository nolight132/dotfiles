// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
	"agent_servers": {
  "opencode": {
   "type": "extension",
   "default_mode": "orchestrator",
   "favorite_models": [],
   "default_config_options": {},
   "favorite_config_option_values": {}
  }
 },
 "show_edit_predictions": true,
 "diagnostics": {
		"inline": {
			"enabled": true
		}
	},
	"ui_font_family": ".ZedSans",
	"buffer_line_height": "comfortable",
	"telemetry": {
		"diagnostics": true,
		"metrics": true
	},
	"inlay_hints": {
		"enabled": false
	},
	"show_signature_help_after_edits": true,
	"auto_signature_help": false,
	"helix_mode": false,
	"prettier": {
		"allowed": false
	},
	"edit_predictions": {
		"mode": "subtle",
		"copilot": {
			"proxy": null,
			"proxy_no_verify": null,
			"enterprise_uri": null
		},
		"enabled_in_text_threads": false
	},
	"icon_theme": "Zed (Default)",
	"git_panel": {
		"dock": "right"
	},
	"buffer_font_size": 14.0,
	"vim_mode": true,
	"vim": {
		"toggle_relative_line_numbers": true
	},
	"code_actions_on_format": {
		"source.organizeImports.biome": true,
		"source.fixAll.biome": true
	},
	"languages": {
		"JavaScript": { "formatter": { "language_server": { "name": "biome" } } },
		"TypeScript": { "formatter": { "language_server": { "name": "biome" } } },
		"TSX": { "formatter": { "language_server": { "name": "biome" } } },
		"JSON": { "formatter": { "language_server": { "name": "biome" } } },
		"JSONC": { "formatter": { "language_server": { "name": "biome" } } },
		"CSS": {
			"formatter": { "language_server": { "name": "biome" } },
			"language_servers": ["tailwindcss-language-server"]
		},
		"Go": {
			"show_edit_predictions": true
		},
		"CMake": {
			"show_edit_predictions": true
		},
		"Shell Script": {
			"show_edit_predictions": true
		},
		"C": {
			"show_edit_predictions": true,
			"tab_size": 2
		},
		"Svelte": {
			"tab_size": 2
		},
		"Python": {
			"hard_tabs": true,
			"format_on_save": "on"
		},
		"GDScript": {
			"hard_tabs": true
		}
	},
	"lsp": {
		"basedpyright": {
			"settings": {
				"analysis": {
					"diagnosticMode": "workspace",
					"inlayHints.callArgumentNames": false,
					"useLibraryCodeForTypes": true
				},
				"python": {
					"pythonPath": ".venv/bin/python"
				}
			}
		}
	},
	"agent": {
		"inline_assistant_model": {
			"provider": "copilot_chat",
			"model": "gpt-5-mini"
		},
		"always_allow_tool_actions": true,
		"dock": "right",
		"default_profile": "write",
		"default_model": {
			"provider": "google",
			"model": "gemini-3-flash-preview"
		}
	},
	"buffer_font_family": "JetBrains Mono",
	"git": {
		"inline_blame": {
			"enabled": true
		}
	},
	"theme": {
		"mode": "system",
		"light": "Ros√© Pine Dawn",
		"dark": "Wal-Transparent"
	},
	"project_panel": {
		"button": true,
		"default_width": 420,
		"dock": "right",
		"file_icons": true,
		"folder_icons": true,
		"git_status": true,
		"indent_size": 20,
		"auto_reveal_entries": true,
		"auto_fold_dirs": true,
		"scrollbar": {
			"show": null
		},
		"indent_guides": {
			"show": "always"
		}
	},
	"tabs": {
		"close_position": "right",
		"file_icons": true,
		"git_status": false,
		"activate_on_close": "history",
		"show_close_button": "hover"
	},
	"scrollbar": {
		"show": "auto",
		"cursors": true,
		"git_diff": false,
		"search_results": true,
		"selected_symbol": true,
		"axes": {
			"horizontal": true,
			"vertical": true
		}
	},
	"features": {
		"edit_prediction_provider": "copilot"
	},
	"format_on_save": "on",
	"calls": {
		"mute_on_join": false,
		"share_on_join": true
	}
}
