    "git_status": false,
    "activate_on_close": "history",
    "show_close_button": "hover"
  },
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": false,
    "search_results": true,
    "selected_symbol": true,
    "axes": {
      "horizontal": true,
      "vertical": true
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "format_on_save": "on",
  "calls": {
    "mute_on_join": false,
    "share_on_join": true
